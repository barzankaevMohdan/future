# ============================================
# Backend Configuration
# ============================================
PORT=3000
NODE_ENV=production

# ============================================
# Frontend Configuration
# ============================================
VITE_BACKEND_URL=http://localhost:3000
VITE_VIDEO_STREAM_URL=http://localhost:5001

# ============================================
# Recognition Service Configuration
# ============================================

# Backend URL (внутри Docker используйте http://backend:3000)
BACKEND_URL=http://localhost:3000

# Источник камеры
# Локальная камера: 0, 1, 2, и т.д.
# IP-камера: rtsp://username:password@192.168.1.100:554/stream
# HTTP поток: http://192.168.1.100:8080/video
CAMERA_SOURCE=0

# Обработка каждого N-го кадра (выше = быстрее, но менее точно)
FRAME_SKIP=3

# Минимальная высота лица в пикселях
MIN_FACE_HEIGHT=20

# Минимальная резкость (variance Laplacian)
MIN_BLUR_VAR=50.0

# Включить предобработку изображения
ENABLE_PREPROCESSING=true

# CLAHE clip limit (контрастность)
CLAHE_CLIP=2.0

# Сила шумоподавления
DENOISE_STRENGTH=5

# Порог распознавания InsightFace (ниже = строже)
INSIGHTFACE_THRESHOLD=0.2

# Минимум эмбеддингов для распознавания
MIN_EMBEDDINGS=2

# Максимальный возраст трека в секундах
TRACK_MAX_AGE=2.0

# Порог для события IN (секунды стабильного присутствия)
IN_THRESHOLD=1.0

# Порог для события OUT (секунды отсутствия)
OUT_THRESHOLD=10.0

# Интервал перезагрузки списка сотрудников (секунды)
RELOAD_INTERVAL=300

# Порт для видео стрима
VIDEO_PORT=5001

# Режим отладки
DEBUG=true

