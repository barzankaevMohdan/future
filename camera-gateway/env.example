# Server
PORT=4000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://attendance_user:secure_password_change_me@localhost:5432/attendance

# Camera passwords encryption key (must match backend)
ENCRYPTION_KEY=change-me-32-char-encryption-key

# Streaming
STREAM_IDLE_TIMEOUT_MS=15000
FFMPEG_PATH=ffmpeg
MAX_RESTARTS_PER_WINDOW=5
RESTART_WINDOW_MS=300000

FFMPEG_PATH=C:\ProgramData\chocolatey\bin\ffmpeg.exe

Для macos
FFMPEG_PATH=/opt/homebrew/bin/ffmpeg