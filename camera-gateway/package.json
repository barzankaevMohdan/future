{
  "name": "camera-gateway",
  "version": "1.0.0",
  "description": "RTSP to MJPEG gateway backed by PostgreSQL + Prisma",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc --project tsconfig.json",
    "start": "node dist/index.js",
    "prisma:copy-schema": "node scripts/sync-prisma-schema.cjs",
    "prisma:generate": "npm run prisma:copy-schema && prisma generate",
    "type-check": "tsc --noEmit",
    "postinstall": "npm run prisma:generate"
  },
  "keywords": [
    "rtsp",
    "mjpeg",
    "streaming",
    "gateway"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "@prisma/client": "^5.7.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "element-plus": "^2.11.9",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "pino": "^9.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "pino-pretty": "^13.1.2",
    "prisma": "^5.7.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
