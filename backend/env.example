# Server
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://attendance_user:secure_password_change_me@localhost:5432/attendance

# JWT Secrets (CHANGE IN PRODUCTION!)
JWT_ACCESS_SECRET=change-me-access-secret-min-32-chars
JWT_REFRESH_SECRET=change-me-refresh-secret-min-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Encryption for camera passwords (CHANGE IN PRODUCTION!)
ENCRYPTION_KEY=change-me-32-char-encryption-key

# File uploads
UPLOADS_DIR=./uploads
MAX_FILE_SIZE=10485760

# CORS
CORS_ORIGIN=*

# Socket.IO
SOCKET_PATH=/ws

# Camera gateway integration
CAMERA_GATEWAY_PUBLIC_URL=http://localhost:4000
CAMERA_GATEWAY_INTERNAL_URL=http://camera-gateway:4000

# Recognition service default company slug
PUBLIC_COMPANY_SLUG=demo-company





