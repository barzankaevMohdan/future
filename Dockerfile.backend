FROM node:18-alpine

WORKDIR /app

# Копируем package.json и устанавливаем зависимости
COPY backend/package*.json ./
RUN npm ci --only=production

# Копируем исходный код
COPY backend/ ./

# Создаем директорию для загрузок и базы данных
RUN mkdir -p uploads

# Открываем порт
EXPOSE 3000

# Запускаем приложение
CMD ["node", "server.js"]

